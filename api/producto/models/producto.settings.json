{
  "kind": "collectionType",
  "collectionName": "productos",
  "info": {
    "name": "Producto",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titulo": {
      "type": "string"
    },
    "precio": {
      "type": "decimal"
    },
    "imagenes": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "slug": {
      "type": "uid",
      "targetField": "titulo"
    },
    "descripcion": {
      "type": "richtext"
    },
    "variantes": {
      "type": "component",
      "repeatable": true,
      "component": "producto.variante"
    },
    "Relacionados": {
      "type": "component",
      "repeatable": true,
      "component": "producto.relacionados"
    },
    "tipo_producto": {
      "type": "enumeration",
      "enum": [
        "Encargo",
        "Lamina",
        "Original"
      ],
      "default": "Lamina",
      "required": true
    },
    "orden_aparicion": {
      "type": "integer",
      "required": false,
      "unique": true,
      "default": 9999
    }
  }
}
